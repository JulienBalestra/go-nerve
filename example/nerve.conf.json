{
  "instance_id": "mymachine",
  "services": {
    "your_http_service": {
      "reporter": {
        "type": "zookeeper",
        "hosts": ["localhost:2181"],
        "path": "/nerve/services/your_http_service/services"
      },
      "watcher": {
        "host": "1.2.3.4",
        "port": 3000,
        "check_interval": 2,
        "checks": [
          {
            "type": "http",
            "uri": "/health",
            "timeout": 0.2,
            "rise": 3,
            "fall": 2
          }
        ]
      }
    },
    "your_tcp_service": {
      "reporter": {
        "reporter_type": "zookeeper",
        "hosts": ["localhost:2181"],
        "path": "/nerve/services/your_tcp_service/services"
      },
      "watcher": {
        "host": "1.2.3.4",
        "port": 6379,
        "check_interval": 2,
        "checks": [
          {
            "type": "tcp",
            "timeout": 0.2,
            "rise": 3,
            "fall": 2
          }
        ]
      }
    },
    "rabbitmq_service": {
      "reporter": {
        "reporter_type": "zookeeper",
        "hosts": ["localhost:2181"],
        "path": "/nerve/services/your_rabbitmq_service/services"
      },
      "watcher": {
        "host": "1.2.3.4",
        "port": 5672,
        "check_interval": 2,
        "checks": [
          {
            "type": "rabbitmq",
            "username": "guest",
            "password": "guest"
          }
        ]
      }
    }
  }
}
