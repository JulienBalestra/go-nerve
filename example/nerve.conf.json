{
  "instance_id": "mymachine",
  "log-level": "DEBUG",
  "ipv6":false,
  "services": [
    {
      "name": "your_http_service",
      "host": "1.2.3.4",
      "port": 3000,
      "reporter": {
        "type": "zookeeper",
        "hosts": ["localhost:2181"],
        "path": "/nerve/services/your_http_service/services",
        "rise": 3,
        "fall": 2
      },
      "watcher": {
        "check_interval": 2000,
        "checks": [
          {
            "type": "http",
            "uri": "/health",
            "timeout": 200
          }
        ]
      }
    },
    {
      "name": "local_smtp",
      "host": "localhost",
      "port": 25,
      "reporter": {
        "type": "console",
        "rise": 3,
        "fall": 2
      },
      "watcher": {
        "check_interval": 2000,
        "checks": [
          {
            "type": "tcp",
            "timeout": 200
          }
        ]
      }
    },
    {
      "name": "your_rabbit_service",
      "host": "1.2.3.4",
      "port": 5672,
      "reporter": {
        "type": "zookeeper",
        "hosts": ["localhost:2181"],
        "path": "/nerve/services/your_rabbitmq_service/services"
      },
      "watcher": {
        "check_interval": 2000,
        "checks": [
          {
            "type": "rabbitmq",
            "username": "guest",
            "password": "guest"
          }
        ]
      }
    }
  ]
}
